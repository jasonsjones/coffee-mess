{
  "name": "coffee-mess",
  "main": "server.js",
  "scripts": {
    "start": "nodemon api/app.js",
    "start:mongodb": "mongod --bind_ip=$IP --dbpath=data --nojournal --smallfiles",
    "prelint": "npm run jscs",
    "lint": "jshint --reporter=node_modules/jshint-stylish public/**/*.js api/*.js api/**/*.js",
    "jscs": "jscs public/**/*.js api/*.js api/**/*.js",
    "livereload": "live-reload --port 9091 public/",
    "serve:dev": "parallelshell 'npm run watch:public' 'npm start'",
    "build:css": "node-sass public/_scss/main.scss -o public/css",
    "watch:css": "npm run build:css -- -w",
    "watch:public": "npm run watch:css & npm run livereload"
  },
  "dependencies": {
    "angular": "1.4.9",
    "angular-messages": "1.5.0",
    "angular-route": "1.4.9",
    "bcrypt-nodejs": "0.0.3",
    "body-parser": "^1.12.0",
    "bootstrap": "3.3.6",
    "crypto": "0.0.3",
    "ejs": "2.4.1",
    "express": "^4.12.0",
    "font-awesome": "4.5.0",
    "jquery": "2.2.0",
    "mongoose": "^4.3.0",
    "node-sass": "3.4.2",
    "passport": "^0.2.1",
    "passport-http": "^0.2.2"
  },
  "devDependencies": {
    "jscs": "2.9.0",
    "jshint": "2.9.1",
    "jshint-stylish": "2.1.0",
    "live-reload": "1.1.0",
    "parallelshell": "2.0.0"
  }
}
